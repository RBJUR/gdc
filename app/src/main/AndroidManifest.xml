<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.roquebuarque.gdc">

    <application
        android:name=".GdcApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Drawer">
        <activity android:name=".feature.task.list.presentation.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".feature.task.add.ui.TaskAddActivity"/>
        <activity android:name=".feature.task.detail.ui.TaskDetailActivity"/>
        
        <service android:name=".job.NotificationJobService"
            android:permission="android.permission.BIND_JOB_SERVICE"/>
    </application>

</manifest>